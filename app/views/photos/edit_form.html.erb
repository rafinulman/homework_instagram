<h1>Edit an existing photo</h1>

<form action = "http://localhost:3000/update_photo/<%=@photo_id%>">
  <div>
    <label for="photo_caption">Caption:</label>
    <input id="photo_caption" type="text" name="the_caption" value = "<%=@photo_caption%>">
  </div>
  <div>
    <label for="photo_image_url">Image URL:</label>
    <input id="photo_image_url" type="text" name="the_source" value = "<%=@photo_source%>">
  </div>
  <div>
    <input type="submit" value="Update photo">
  </div>
</form>